script/source = "extends Node3D

var xr_interface: XRInterface
var enemiesAlive
var enemiesGoal
var enemiesCreated
var round

func _ready():
	round = 1
	newRound()
	xr_interface = XRServer.find_interface(\"OpenXR\")
	if xr_interface and xr_interface.is_initialized():
		print(\"OpenXR initialised successfully\")

		# Turn off v-sync!
		DisplayServer.window_set_vsync_mode(DisplayServer.VSYNC_DISABLED)

		# Change our main viewport to output to the HMD
		get_viewport().use_xr = true
	else:
		print(\"OpenXR not initialized, please check if your headset is connected\")
		
		
func _process(delta):
	pass

func getEnemiesNum():
	return (round ** 1.3) + 3

func newRound():
	round += 1
	enemiesCreated = 0
	enemiesAlive = 0
	enemiesGoal = getEnemiesNum()
	$Timer.start()
	

func _on_timer_timeout():
	print(\"timeout\")
	if enemiesCreated < enemiesGoal:
		print(\"new enemy created\")
		enemiesCreated += 1
		var enemyScene = load(\"res://enemy.tscn\")
		var enemyInstance = enemyScene.instantiate()
		#add_child(enemyInstance)
		enemyInstance.global_position = global_position + Vector3(cos(enemiesCreated/PI) * randi_range(1, 5), 3, sin(enemiesCreated/PI) * randi_range(0, 5))
	else:
		print(\"stopping timer\")
		$Timer.stop()


func _on_enemy_1_on_enemy_died():
	print(\"signal received from enemy\")
	enemiesAlive -= 1
	if enemiesAlive == 0:
		newRound()
"

